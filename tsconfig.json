{
  "compilerOptions": {
    "typeRoots": ["./node_modules/@types"], //TypeScript учитывает global.d.ts
    "target": "es5",
    "jsx": "react-jsx",
    "noEmitOnError": true,
    "noUnusedLocals": true,
    "removeComments": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "baseUrl": "./",
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "strict": true,
    "paths": {
      "@/*": ["src/*"]
    },
    "lib": [
      "decorators",
      "dom",
      "es5",
      "scripthost",
      "es2015.promise"
    ]
  },
  "exclude": [
    "node_modules"
  ],
    "include": [
      "src/**/*.ts",                     // Включаем все TypeScript файлы
      "src/**/*.tsx",                    // Включаем все TSX файлы
      "global.d.ts"
    ]
}